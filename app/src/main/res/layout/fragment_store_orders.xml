<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StoreOrdersFragment">

    <!-- TODO: Update blank fragment layout -->

    <Spinner
        android:id="@+id/store_order_spinner"
        android:layout_width="164dp"
        android:layout_height="23dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/_dynamic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/store_order_list_view"
        android:layout_width="match_parent"
        android:layout_height="475dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toTopOf="@+id/store_order_cancel_order_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/store_order_spinner" />

    <TextView
        android:id="@+id/store_order_number_text_view"
        android:layout_width="164dp"
        android:layout_height="17dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:text="@string/order_number"
        app:layout_constraintBottom_toTopOf="@+id/store_order_list_view"
        app:layout_constraintEnd_toStartOf="@+id/store_order_spinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="61dp"
        android:text="@string/order_total_wtax"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/store_order_total_text_view"
        app:layout_constraintStart_toEndOf="@+id/store_order_cancel_order_button"
        app:layout_constraintTop_toBottomOf="@+id/_dynamic" />

    <TextView
        android:id="@+id/store_order_total_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="61dp"
        android:text="@string/default_price"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/_dynamic" />

    <Button
        android:id="@+id/store_order_cancel_order_button"
        android:layout_width="95dp"
        android:layout_height="70dp"
        android:layout_marginStart="29dp"
        android:layout_marginBottom="34dp"
        android:text="@string/cancel_order_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/_dynamic" />

</androidx.constraintlayout.widget.ConstraintLayout>